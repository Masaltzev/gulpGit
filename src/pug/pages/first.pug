doctype html
html(lang="ru-RU")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        link(rel="stylesheet" href="css/main.css")
        title Hello world
    body


        include ../layout/head.pug

        section.mt-2.mb-2
            .container
                .d-flex.bd-highlight.border
                    .p-2.flex-fill.bd-highlight
                        form(action="first.php" method="post")
                            fieldset
                                legend Введите данные о ссуде:
                                .form-group.row
                                    label.col-sm-6.col-form-label Размер ссуды в любой валюте:
                                    .col-sm-3
                                        input.form-control(type="text" name="sizeS" onchange = "calculate();")
                                .form-group.row
                                    label.col-sm-6.col-form-label Годовой процент:
                                    .col-sm-3
                                        input.form-control(type="text" name="yareS" onchange = "calculate();")
                                .form-group.row
                                    label.col-sm-6.col-form-label Срок ссуды в годах:
                                    .col-sm-3
                                        input.form-control(type="text" name="summS" onchange = "calculate();")
                                .form-group.row
                                    .col-sm-6
                                    .col-sm-3
                                        button.btn.btn-primary.form-control(type="submit"  onclick = "calculate();") Рассчитать

                            fieldset
                                legend Сведения о платежах:
                                .form-group.row
                                    label.col-sm-6.col-form-label Ежемесячный платеж:
                                    label.col-sm-3.col-form-label#payment
                                .form-group.row
                                    label.col-sm-6.col-form-label Общая сумма платежей:
                                    label.col-sm-3.col-form-label#total
                                .form-group.row
                                    label.col-sm-6.col-form-label Общая сумма платежей по процентам:
                                    label.col-sm-3.col-form-label#totalInterest


                    .p-2.flex-fill.bd-highlight.border-right.border-left


                    .p-2.flex-fill.bd-highlight


